# Base de datos (Railway/Supabase)
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Upload (opcional - para archivos grandes)
UPLOADTHING_SECRET=tu_uploadthing_secret
UPLOADTHING_APP_ID=tu_uploadthing_app_id

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=https://tu-app.vercel.app
NEXT_PUBLIC_RAILWAY_URL=https://tu-app.railway.app

# Configuración de matching (opcional)
MATCHING_DATE_TOLERANCE=3
MATCHING_AMOUNT_TOLERANCE=0.01

# Configuración de producción
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Límites de archivo (en bytes)
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=3


